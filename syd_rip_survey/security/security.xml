<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="module_category_rip_survey">
            <field name="name">RIP Survey</field>
            <field name="description">Helps you manage your REST In Peace Surveys.</field>
        </record>

        <record id="group_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_category_rip_survey"/>
        </record>

        <record id="group_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_rip_survey"/>
            <field name="implied_ids" eval="[(4, ref('group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
