<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.restapi</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="base.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[hasclass('settings')]" position="inside">
				<div class="app_settings_block" data-string="REST In Peace" string="REST In Peace" data-key="syd_rest_in_peace">
					<h2>REST In Peace</h2>
					<div class="row mt16 o_settings_container">
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_right_pane">
								<div class="content-group">
									<div class="row mt16">
										<label class="col-lg-4 o_light_label" string="secret" for="secret" />
										<field name="secret" attrs="{'required': True}" password="True" />
									</div>
									<div class="row mt16">
										<label class="col-lg-4 o_light_label" for="algorithm" />
										<field name="algorithm" attrs="{'required': True}" />
									</div>
									<div class="row mt16">
										<label class="col-lg-4 o_light_label" for="access_token_exp" />
										<field name="access_token_exp" attrs="{'required': True}" />
									</div>
									<div class="row mt16">
										<label class="col-lg-4 o_light_label" for="refresh_token_exp" />
										<field name="refresh_token_exp" attrs="{'required': True}" />
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>

</odoo>